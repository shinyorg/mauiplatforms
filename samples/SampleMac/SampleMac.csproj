<Project Sdk="Microsoft.NET.Sdk.Razor">

    <PropertyGroup>
        <TargetFramework>net10.0-macos</TargetFramework>
        <OutputType>Exe</OutputType>
        <Nullable>enable</Nullable>
        <UseMaui>true</UseMaui>
        <SingleProject>true</SingleProject>
        <ImplicitUsings>enable</ImplicitUsings>
        <SupportedOSPlatformVersion>14.0</SupportedOSPlatformVersion>

        <ApplicationTitle>MAUI macOS</ApplicationTitle>
        <ApplicationId>org.shiny.macos</ApplicationId>
        <ApplicationIdGuid>C5E91D2A-367B-4F8C-A1D3-8B4F22E5D691</ApplicationIdGuid>
        <MauiVersion>10.0.31</MauiVersion>

        <ApplicationDisplayVersion>1.0</ApplicationDisplayVersion>
        <ApplicationVersion>1</ApplicationVersion>
        <DefineConstants>$(DefineConstants);MACAPP</DefineConstants>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.Maui.Controls" Version="$(MauiVersion)"/>
        <PackageReference Include="Microsoft.AspNetCore.Components.WebView.Maui" Version="10.0.20"/>
        <ProjectReference Include="..\..\src\Microsoft.Maui.Platform.MacOS\Microsoft.Maui.Platform.MacOS.csproj"/>
        <ProjectReference Include="..\..\src\Microsoft.Maui.Essentials.MacOS\Microsoft.Maui.Essentials.MacOS.csproj"/>
    </ItemGroup>

    <ItemGroup>
        <Compile Include="..\Sample\App.cs">
            <Link>App.cs</Link>
        </Compile>
        <Compile Include="..\Sample\MainPage.cs">
            <Link>MainPage.cs</Link>
        </Compile>
        <Compile Include="..\Sample\CollectionViewPage.cs">
            <Link>CollectionViewPage.cs</Link>
        </Compile>
        <Compile Include="..\Sample\EssentialsPage.cs">
            <Link>EssentialsPage.cs</Link>
        </Compile>
        <Compile Include="..\Sample\BlazorPage.cs">
            <Link>BlazorPage.cs</Link>
        </Compile>
        <Compile Include="..\Sample\Platforms\macOS\Main.cs">
            <Link>Main.cs</Link>
        </Compile>
        <Compile Include="..\Sample\Platforms\macOS\MauiMacOSApp.cs">
            <Link>MauiMacOSApp.cs</Link>
        </Compile>
    </ItemGroup>

    <ItemGroup>
        <BundleResource Include="..\Sample\wwwroot\**" Link="wwwroot\%(RecursiveDir)%(Filename)%(Extension)" />
    </ItemGroup>

</Project>
